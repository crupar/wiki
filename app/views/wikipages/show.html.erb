<h1><%= @wikipage.title.split.map(&:capitalize).join(' ') %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wikipage.body) %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wikipage_path(@wikipage), class: 'btn btn-success' %>
    <% if policy(@wikipage).destroy? %>
      <%= link_to "Delete Entry", @wikipage, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this entry?'} %>
    <% end %>
  </div>
  <small>
  created <%= time_ago_in_words(@wikipage.created_at) %> ago by <%= @wikipage.user.username %>
</small>
</div>
